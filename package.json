{
  "name": "logbook",
  "private": true,
  "version": "0.1.0",
  "description": "Local, persistent development logbook.",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "pnpm -r --if-present run build",
    "dev": "pnpm -r --parallel --if-present run dev",
    "typecheck": "pnpm -r --if-present run build && pnpm -r --if-present run typecheck",
    "test": "pnpm -r --if-present run test",
    "lint": "pnpm -r --if-present run lint",
    "ci:smoke:benchmark": "node scripts/ci-benchmark-gate.mjs",
    "ci:smoke:cli": "node scripts/ci-cli-smoke.mjs"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
